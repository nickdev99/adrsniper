<%- title = @dine_name %>
<div class="restaurant-layout" id="restaurant-container">
    <%= render :partial => 'layouts/header' %>
	<div class="page-wrapper">
		<div class="banner">
			<div>
				<div class="container">
					
                    <h1><%= @dine_name %></h1>

					<div class="overview">
                        <div class="v-center">
                            &nbsp;
							<%# <span class="rating">
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fa fa-star"></i>
								<i class="fa fa-star-half-o"></i>
								<i class="fa fa-star-o"></i>
							</span>
