		<h3>SEARCH for openings</h3>

		<select class="selectpicker longinput">
			<option style="display: none" selected disabled>Location</option>
			<option>First location</option>
			<option>Second location</option>
		</select>

		<div class="clearfix">
			<input class="datepicker shortinput pull-left" placeholder="Date Range" class="datepicker">
			<span class="delimiter">â€“</span>
			<input class="datepicker shortinput pull-right" placeholder="End" class="datepicker">
		</div>

		<div class="clearfix">
			<select class="selectpicker shortinput pull-left">
				<option style="display: none" selected disabled>Time</option>
				<option>12:00</option>
				<option>13:00</option>
			</select>
			<select class="selectpicker shortinput pull-right">
				<option style="display: none" selected disabled>Party Size</option>
				<option>2</option>
				<option>3</option>
			</select>
		</div>

		<a class="toggle-restaurant-input" href="#">Specify Restaurant</a>
		<input class="restaurant-input longinput" disabled placeholder="Enter Restaurant Name...">
	</div>

	<input class="submit-button" type="submit" value="Submit">
</form>
				</div>
			</div>
			<div class="pull-left">
				<div class="content">

					<div class="collapse-container mobile-only-collapse" id="about">
						<div class="title">
							<a data-toggle="collapse" href="#collapseOverview" aria-expanded="true">
								<span>Overview</span>
							</a>
						</div>
						<div class="collapse in reviews" id="collapseOverview">
							
							<div class="about">
                                <div class="title">About <%= @dine_name %></div>
                                <div class="description">
                                    <%= raw @dine_description %>
								</div>
							</div>

							<div class="photos" id="photos">
								<div class="title">Photos</div>
								<div class="row">
									<div class="col-xs-6 col-sm-3">						
										<img src="assets/images/restaurant-1.jpg">
									</div>
									<div class="col-xs-6 col-sm-3">						
										<img src="assets/images/restaurant-2.jpg">
